@model IEnumerable<PortalNoticias.Noticia>
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row justify-content-center mt-2">
    <div class="col-md-10">
        <div class="row justify-content-between">
            <div class="col-md-6">
                <h1>Lista de noticias</h1>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("Crear","Noticia")" class="btn btn-success float-right"><i class="fas fa-plus-square"></i> Crear noticia</a>
            </div>
        </div>
        <table class="table table-bordered table-responsive-sm">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Tipo de noticia</th>
                    <th>Título</th>
                    <th style="width:135px">Acciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.IdNoticia
                        </td>
                        <td>
                            @item.TipoNoticia
                        </td>
                        <td>
                            @item.Titulo
                        </td>
                        <td style="width:135px">
                            <a href="/Noticia/Actualizar?idNoticia=@item.IdNoticia" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="/Noticia/ConsultarId?id=@item.IdNoticia" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></a>
                            <button class="btn btn-sm btn-danger btnRmvNoticia" value="@item.IdNoticia"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@section scripts
    {
    <script src="~/JS/ScriptNoticias.js"></script>
}