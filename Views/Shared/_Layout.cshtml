<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="~/Content/css/media_query.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/extras.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/css/animate.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="~/Content/css/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/owl.theme.default.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/css/style_1.css" rel="stylesheet" type="text/css" />
    <!-- Modernizr JS -->
    <script src="~/Content/js/modernizr-3.5.0.min.js"></script>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="container-fluid fh5co_header_bg">
        <div class="container">
            <div class="row">
                <div class="col-12 fh5co_mediya_center">                   
                    <a href="#" class="color_fff fh5co_mediya_setting">
                        <i class="fa fa-clock-o"></i>&nbsp;&nbsp;&nbsp;@DateTime.Today.ToString("D")
                    </a>
                    <div class="d-inline-block fh5co_trading_posotion_relative">
                        <a href="#" class="treding_btn">Lo más comentado</a>
                        <div class="fh5co_treding_position_absolute"></div>
                    </div>
                    <ul class="listaInicio">
                        <li class="login_btn">Iniciar sesión</li>
                        <li class="registro_btn">@Html.ActionLink("Registrar", "RegistroIndex", "Login", null, new { @class = "enlaces" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-3 fh5co_padding_menu">
                    <img src="~/Content/images/logo.png" alt="img" class="fh5co_logo_width" />
                </div>
                <div class="col-12 col-md-9 align-self-center fh5co_mediya_right">
                    <div class="text-center d-inline-block">
                        <a class="fh5co_display_table"><div class="fh5co_verticle_middle"><i class="fa fa-search"></i></div></a>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-faded fh5co_padd_mediya padding_786">
        <div class="container padding_786">
            <nav class="navbar navbar-toggleable-md navbar-light ">
                <button class="navbar-toggler navbar-toggler-right mt-3" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Home") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home","")">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Sucesos") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Sucesos" })">Sucesos <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Deportes") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Deportes" })">Deportes <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Entretenimiento") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Entretenimiento" })">Entretenimiento <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Economia") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Economia" })">Economía <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Tecnologia") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Tecnologia" })">Tecnología <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item @(((string)ViewBag.Etiqueta).Equals("Internacionales") ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index","Home",new { tipoNoticia = "Internacionales" })">Internacionales<span class="sr-only">(current)</span></a>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
    </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />


        <footer>
            <div class="container-fluid fh5co_footer_bg pb-3">
                <div class="container animate-box">
                    <div class="row">
                        <div class="col-12 spdp_right py-5"><img src="~/Content/images/white_logo.png" alt="img" class="footer_logo" /></div>
                        <div class="clearfix"></div>
                        <div class="col-12 col-md-4 col-lg-5">
                            <div class="footer_main_title py-3"> Acerca</div>
                            <div class="footer_sub_about pb-3">
                               En esta página podrá encontrar todas las noticias importantes tanto del país costarricense como del mundo entero.
                            </div>

                        </div>
                        <div class="col-12 col-md-3 col-lg-3">
                            <div class="footer_main_title py-3"> Category</div>
                            <ul class="footer_menu">
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Sucesos</a></li>
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Deportes</a></li>
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Entretenimiento</a></li>
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Economía</a></li>
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Tecnología</a></li>
                                <li><a href="#" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; Internacionales</a></li>
                            </ul>
                        </div>
                        <div class="col-12 col-md-5 col-lg-4 position_footer_relative">
                            <div class="footer_main_title py-3"> Últimas noticias</div>
                            <div class="footer_makes_sub_font"> Dec 31, 2016</div>
                            <a href="#" class="footer_post pb-4"> Success is not a good teacher failure makes you humble </a>
                            <div class="footer_makes_sub_font"> Dec 31, 2016</div>
                            <a href="#" class="footer_post pb-4"> Success is not a good teacher failure makes you humble </a>
                            <div class="footer_makes_sub_font"> Dec 31, 2016</div>
                            <a href="#" class="footer_post pb-4"> Success is not a good teacher failure makes you humble </a>
                            <div class="footer_position_absolute"><img src="~/Content/images/footer_sub_tipik.png" alt="img" class="width_footer_sub_img" /></div>
                        </div>

                    </div>
                    
                </div>
            </div>
            <div class="container-fluid fh5co_footer_right_reserved">
                <div class="container">
                    <div class="row  ">
                        <div class="col-12 col-md-6 py-4 Reserved"> © Copyright @DateTime.Now.Year , Todos los derechos reservados. </div>
                        <div class="col-12 col-md-6 spdp_right py-4">
                            <ul class="listaFooter">
                                <li class="footer_last_part_menu">@Html.ActionLink("Inicio", "Index", "Home",null, new { @class = "enlaces" })</li>
                                <li class="footer_last_part_menu">@Html.ActionLink("Acerca de nosotros", "About", "Home", null, new { @class = "enlaces" })</li>
                                <li class="footer_last_part_menu">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "enlaces" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="gototop js-top">
                <a href="#" class="js-gotop"><i class="fa fa-arrow-up"></i></a>
            </div>


        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <!--<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"
            integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"
            integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
            crossorigin="anonymous"></script>
    <!-- Waypoints -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Main -->
    <script src="~/Content/js/main.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
