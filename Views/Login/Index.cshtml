
@model PortalNoticias.Models.UserViewModel
@{ Layout = null; }


<!DOCTYPE html>

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>Application<br> 24 News</h2>
            <p>Ingreso al sistema</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">

                @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
                {
                    <div class="form-group">

                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @placeholder = "Ingrese su nombre de usuario", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName)

                    </div>
                    <div class="form-group">

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Contraseña", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password)

                    </div>
                    <input type="submit" class="btn btn-black" name="name" value="Login" />
                    <input type="reset" class="btn btn-secondary" name="name" value="Clear" />
                }

            </div>
        </div>
    </div>
  

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>


